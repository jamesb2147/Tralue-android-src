        	android:padding="1dp"
        	android:text="@string/card_spend_bonus_value_text"
        	/>
    	<TextView 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="1dp"
        	android:id="@+id/card_spend_bonus_value"
        	/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="1dp"
        	android:text="@string/spend_per_month_for_bonus_text"
        	/>
