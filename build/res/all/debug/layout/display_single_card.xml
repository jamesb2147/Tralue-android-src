        	android:layout_height="wrap_content"
        	android:padding="1dp"
        	android:text="@string/card_total_bonus"
        	/>
    	<TextView 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="1dp"
        	android:id="@+id/card_total_bonus"
        	/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
